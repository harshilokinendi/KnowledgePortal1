@model KnowledgePortal.Models.Comment
@{
    ViewBag.Title = "CommentsForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CommentsForm</h2>


@using (Html.BeginForm("SaveForm", "Comments"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @cols = "100", @rows = "10", @style = "width:200%;" })

    </div>
    @Html.HiddenFor(m => m.Id)


    <button type="submit" class="btn btn-primary">Save</button>

}